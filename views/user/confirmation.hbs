<section class="order_details section_gap">
	<hr>
	<div class="container mt-5">
		<h3 class="title_confirmation">Thank you. Your order has been received.</h3>
		<div class="row order_d_inner">
			<div class="col-lg-5">
				<div class="details_item">
					<h4>Order Info</h4>
					<ul class="list">

						<li><a href="#"><span>Order number</span> : {{pro.[0]._id}}</a></li>
						<li><a href="#"><span>Date</span> : {{pro.[0].date}}</a></li>
						<li><a href="#"><span>Total</span> : {{pro.[0].total}}</a></li>

						<li><a href="#"><span>Payment method</span> : {{pro.[0].payment}}</a></li>


					</ul>
				</div>
			</div>
			<div class="col-lg-1">
			</div>
			<div class="col-lg-6">
				<div class="details_item">
					<h4>Shipping Address</h4>
					<ul class="list">
						<li><a href="#"><span>Name</span> : {{pro.[0].deliveryDetails.name}}</a></li>
						<li><a href="#"><span>Mobile No</span> : {{pro.[0].deliveryDetails.mobile}}</a></li>
						<li><a href="#"><span>Address</span> : {{pro.[0].address.address1}}</a></li>
						<li><a href="#"><span>Place</span> : {{pro.[0].address.city}}</a></li>
						<li><a href="#"><span>Postcode </span> : {{pro.[0].address.pincode}}</a></li>

					</ul>
				</div>
			</div>
		</div>
		<div class="order_details_table">
			<h2>Order Details</h2>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th scope="col">Product</th>
							<th scope="col">Quantity</th>
							<th scope="col">Total</th>
						</tr>
					</thead>
					<tbody>
						{{#each cartproduct}}
						<tr>
							<td>
								<p>{{this.product.name}}</p>
							</td>
							<td>
								<h5>x {{this.quantity}}</h5>
							</td>
							<td>
								<p>₹{{this.producttotal}}</p>
							</td>
						</tr>
						{{/each}}

						<tr>
							<td>
								<h4>Total</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>₹{{order.total}}</p>
							</td>
						</tr>
						<tr>
							<td>
								<h4>Shipping</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>₹ 0.00</p>
							</td>
						</tr>
						<tr>
							<td>
								<h4>Offer Amount</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>₹{{order.offertotal}}</p>
							</td>
						</tr>
						<tr>
							<td>
								<h4>Coupon Amount</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>₹{{order.coupon}}</p>
							</td>
						</tr>
						<tr>
							<td>
								<h4>Subotal</h4>
							</td>
							<td>
								<h5></h5>
							</td>
							<td>
								<p>₹{{order.subtotal}}</p>
							</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</section>