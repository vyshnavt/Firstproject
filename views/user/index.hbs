<!-- start product Area -->
<section class="owl-carousel active-product-area section_gap">
	<!-- single product slide -->
	<div class="single-product-slider">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-6 text-center">
					<div class="section-title">
						<h1>Latest Products</h1>
						<p>Our New Products</p>
					</div>
				</div>
			</div>
			<div class="row">
				<!-- single product -->
				{{#each products}}
				<div class="col-lg-3 col-md-6">
					<div class="single-product">
						<img class="img-fluid " style="width: 250px; height: 250px;" src="/proimg/{{this._id}}.jpg"
							alt="">
						<div class="product-details">
							<h6 style="height: 30px;">{{this.name}}</h6>
							<div class="price">
								{{#if offerstatus}}
								<h6 class="l-through">₹{{this.price}}</h6>
								<h6 class="text-success">{{offerpercentage}}%Off</h6>
								<h6>₹{{this.discountPrice}}</h6>
								{{else}}
								<h6>₹{{this.price}}</h6>
								{{/if}}
							</div>
							<div class="prd-bottom">

								<a class="social-info">
									<button style="border: none; background-color: #ffff;"
										onclick="addToCart('{{this._id}}')"><span style="height: 29px; width: 29px;"
											class="ti-bag"></span></button>
									<p class="hover-text">Add To Cart</p>

								</a>

								<a class="social-info ">
									{{#if wishview}}
									<button style="border: none; background-color: #ffff;"
										onclick="addTowishlist('{{this._id}}')"><span id="a{{this._id}}"
											style="height: 29px; width: 29px;background-color: #ef7b7b;"
											class="lnr lnr-heart"></span></button>
									{{else}}
									<button style="border: none; background-color: #ffff;"
										onclick="addTowishlist('{{this._id}}')"><span style="height: 29px; width: 29px;"
											id="a{{this._id}}" class="lnr lnr-heart"></span></button>
									{{/if}}
									<p class="hover-text">Wishlist</p>
								</a>

								<a href="/product-detail/pp/{{this._id}}" class="social-info">
									<button style="border: none; background-color: #ffff;"><span
											style="height: 29px; width: 29px;" class="lnr lnr-move"></span></button>
									<p class="hover-text">view more</p>

								</a>
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</div>
			<div class="d-flex justify-content-end"> <a href="/shopcategory/all/0" style="border-radius: 3px;"
					class="primary-btn text-white">View More</a></div>
		</div>
	</div>
