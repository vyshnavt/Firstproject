<section class="banner-area">
	<div class="container">
		<div class="row fullscreen align-items-center justify-content-start">
			<div class="col-lg-12">
				<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner ">
						<div class="carousel-item active">
							<div class="row  align-items-center d-flex">
								<div class="col-lg-5 col-md-6 ">
									<h1 class="font-weight-bold">{{banner.name}}<br></h1>
									<div class="add-bag d-flex align-items-center">
										<h2 class="font-weight-bold">₹{{banner.price}}<span></span></h2>
									</div>
									<div class="add-bag d-flex align-items-center">
										<a class="add-btn" onclick="addToCart('{{banner._id}}')"><span
												class="lnr lnr-cross"></span></a>
										<span class="add-text text-uppercase">Add to Bag</span>
									</div>
								</div>
								<div class="col-lg-7">
									<div class="banner-img">
										<a href="/product-detail/product/{{banner._id}}">
											<img class="img-fluid" src="/proimg/{{banner._id}}.jpg" alt=""></a>

									</div>
								</div>

							</div>

						</div>
						{{#each bannerproducts}}
						<div class="carousel-item">

							<div class="row align-items-center d-flex">
								<div class="col-lg-5 col-md-6">
									<h1 class="font-weight-bold">{{name}}<br></h1>
									<div class="add-bag d-flex align-items-center">
										<h2 class="font-weight-bold">₹{{price}}<span></span></h2>
									</div>
									<div class="add-bag d-flex align-items-center">
										<a class="add-btn" onclick="addToCart('{{_id}}')"><span
												class="lnr lnr-cross"></span></a>
										<span class="add-text text-uppercase">Add to Bag</span>
									</div>
								</div>
								<div class="col-lg-7">
									<div class="banner-img">
										<a href="/product-detail/product/{{_id}}">
											<img class="img-fluid" style="width: -webkit-fill-available;"
												src="/proimg/{{_id}}.jpg" alt=""></a>
									</div>
								</div>

							</div>


						</div>
						{{/each}}
					</div>
					<a class="carousel-control-prev"
						style="height: 20px;width: 2%;background: #00000010 no-repeat center center"
						href="#carouselExampleControls" role="button" data-slide="prev">
						<span class="carousel-control-prev-icon" aria-hidden="true"></span>
						<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" style="width: 2%;" href="#carouselExampleControls" role="button"
						data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="true"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- End banner Area -->

