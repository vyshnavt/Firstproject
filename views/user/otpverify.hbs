<section class="login_box_area section_gap">
	<div class="container">
		<div class="row">
			<div class="col-md-2"></div>
			<div class="col-lg-8">
				<div class="login_form_inner">
					<h3>OTP Verification</h3>

					<form class="row login_form" action="/otpverify" method="post" id="contactForm"
						novalidate="novalidate">
						<div class="col-md-12 form-group">

						</div>
						<h6>Enter OTP send to {{num}}</h6>
						<div class="col-md-12 form-group">
							<input type="" class="form-control" id="name" name="otp" placeholder="">
						</div>
						{{#if error}}
						<div class="col-md-12 form-group">
							<p class="text-danger">{{error}}</p>
						</div>
						{{/if}}
						<div class="col-md-12 form-group">
							<button type="submit" value="submit" class="primary-btn">Verify</button>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>