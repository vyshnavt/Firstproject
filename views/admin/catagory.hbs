<section class="d-flex justify-content-center">
    <div class=" col-8 tm-md-12 tm-sm-12 tm-col mt-3">
        
        <div class="bg-light tm-block  ">
            <div class="bg-light  row  ">
                <div class="col-md-6 pt-2">
                  <h2 class="tm-block-title d-inline-block">Product Categories</h2>
                </div>
                <div class="col-md-6 text-right"> 
                  <a  onclick="addCategory()" class="btn btn-primary">Add New Category</a>
                </div>
            </div>
            <hr>
            <div class=" d-flex justify-content-center">
                <table id="usertable" class="table table-hover table-striped mt-3" >
                    <thead>
                        <tr>
                            <th><div class="ml-5">No</div></th>
                          <th><div class="ml-5">Name</div></th>
                          <th><div class="ml-5">Edit</div></th>
                          <th><div class="ml-4">Delete</div></th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each category}}
                            <tr>
                                <td><div class="ml-5 pt-2">{{inc @index}}</div></td>
                                <td><div class="ml-5 pt-2">{{ this.name }}</div></td>
                                <td>
                                   <a href="/admin/edit-category/{{this._id}}" class="btn btn-info ml-5">Edit</a>
                                   {{!-- <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal" data-whatever="@mdo">Edit</button> --}}      
                                </td>                        
                                <td class="tm-trash-icon-cell ">
                                    <div class="ml-5 pt-2"><a  onclick="deleteCategory('{{this._id}}','{{this.name}}')"><i class="fas fa-trash-alt tm-trash-icon"></i></a>  </div>
                                                                
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

        </div>
    </div>
 

</section>

