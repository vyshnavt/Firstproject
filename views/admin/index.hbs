<body class="bg02">
  <section class="p-3">
    <div style="background:#fff; " class="p-3">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#report"
        data-whatever="@mdo">Report</button>

    </div>
  </section>

  <div class="modal fade" id="report" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Edit category</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">

          <form action="/admin/report" method="post" class="tm-edit-product-form">
            <div class="input-group mb-3">
              <label class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Start date</label>
              <input name="startdate" id="startdate" type="date"
                class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" onkeyup="startvalidate()">

            </div>
            <p class="text-danger text-center" id="starterror"></p>
            <div class="input-group mb-3">
              <label class="col-xl-4 col-lg-4 col-md-4 col-sm-5 col-form-label">Ending Date</label>
              <input name="enddate" id="enddate" type="date"
                class="form-control validate col-xl-9 col-lg-8 col-md-8 col-sm-7" onkeyup="endvalidate()">

            </div>
            <p class="text-danger text-center" id="enderror"></p>

            <div class="input-group mb-3">
              <div class="ml-auto col-xl-8 col-lg-8 col-md-8 col-sm-7 pl-0">
                <button type="submit" onclick="return validate()" class="btn btn-primary">Submit
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="modal-footer">
        </div>
      </div>
    </div>
  </div>

  <section id="reportsPage">
    <div class="" id="home">
      <div class="container">
        <div class="row tm-content-row tm-mt-big" style="margin-top: 0px">
          <div class="tm-col tm-col-big">
            <div class="bg-white tm-block h-100">
              <h2 class="tm-block-title">Monthly Sale</h2>
              <canvas id="lineChart"></canvas>
            </div>
          </div>
          <div class="tm-col tm-col-big">
            <div class="bg-white tm-block h-100">
              <h2 class="tm-block-title">Payment Method</h2>
              <canvas id="barChart"></canvas>
            </div>
          </div>
          <div class="tm-col tm-col-small">
            <div class="bg-white tm-block h-100">
              <canvas id="pieChart" class="chartjs-render-monitor"></canvas>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>
  <script>
    function startvalidate() {
      const sdate = document.getElementById("startdate").value
      const sdateerror = document.getElementById("starterror")
      if (sdate == "") {
        sdateerror.innerHTML = "This field must be required!"
        return false
      }
      sdateerror.innerHTML = ""
      return true
    }

    function endvalidate() {
      console.log("DDDDDDddd")
      const edate = document.getElementById("enddate").value
      const edateerror = document.getElementById("enderror")
      if (edate == "") {
        console.log("nnnnnn")
        edateerror.innerHTML = "This field must be required!"
        return false
      }
      edateerror.innerHTML = ""
      return true
    }
    function validate() {
      if (startvalidate() && endvalidate()) {
        return true
      }
      return false
    }
  </script>
</body>